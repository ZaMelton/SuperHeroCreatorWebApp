                <span asp-validation-for="PrimarySuperHeroAbility" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondarySuperHeroAbility" class="control-label">Secondary SuperHero Ability</label>
                <input asp-for="SecondarySuperHeroAbility" class="form-control" />
